<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="rootPane" prefHeight="450.0" prefWidth="350.0" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.frandm.pomodoro.PomodoroController">

    <VBox alignment="CENTER" spacing="25" style="-fx-background-color: white;">
        <VBox alignment="CENTER" spacing="5">
            <Label fx:id="stateLabel" text="READY TO START" style="-fx-font-weight: bold; -fx-font-size: 16;" />
            <Label fx:id="timerLabel" text="25:00">
                <Font name="Monospaced Bold" size="64.0" />
            </Label>
        </VBox>

        <HBox alignment="CENTER" spacing="15">
            <Button fx:id="startPauseBtn" onAction="#handleStartPause" prefHeight="40" prefWidth="90" text="START" />
            <Button onAction="#handleSkip" prefHeight="40" prefWidth="70" text="SKIP" />
            <Button onAction="#handleFinish" prefHeight="40" prefWidth="80" text="FINISH" />
        </HBox>

        <Button onAction="#toggleSettings" style="-fx-background-radius: 20;" text="⚙ SETTINGS" />
    </VBox>

    <VBox fx:id="settingsPane" spacing="15" style="-fx-background-color: #f9f9f9; -fx-border-color: #cccccc; -fx-border-width: 1 0 0 0;" translateY="450">
        <padding><Insets bottom="20" left="20" right="20" top="20" /></padding>

        <HBox alignment="CENTER_LEFT">
            <Label text="TIMER SETTINGS" style="-fx-font-weight: bold; -fx-text-fill: #7f8c8d;" />
            <Region HBox.hgrow="ALWAYS" />
            <Button onAction="#toggleSettings" text="✕" style="-fx-background-color: transparent; -fx-font-weight: bold;" />
        </HBox>

        <Separator />

        <Label text="Time (minutes)" style="-fx-font-weight: bold;" />
        <HBox spacing="10">
            <VBox>
                <Label style="-fx-font-size: 10;" text="Pomodoro" />
                <Spinner fx:id="workSpinner" prefWidth="85" />
            </VBox>
            <VBox>
                <Label style="-fx-font-size: 10;" text="Short Break" />
                <Spinner fx:id="shortSpinner" prefWidth="85" />
            </VBox>
            <VBox>
                <Label style="-fx-font-size: 10;" text="Long Break" />
                <Spinner fx:id="longSpinner" prefWidth="85" />
            </VBox>
        </HBox>

        <HBox alignment="CENTER_LEFT">
            <Label text="Auto Start Breaks" HBox.hgrow="ALWAYS" maxWidth="Infinity" />
            <ToggleButton fx:id="autoBreakToggle" />
        </HBox>

        <HBox alignment="CENTER_LEFT">
            <Label text="Auto Start Pomodoros" HBox.hgrow="ALWAYS" maxWidth="Infinity" />
            <ToggleButton fx:id="autoPomoToggle" />
        </HBox>

        <HBox alignment="CENTER_LEFT">
            <Label text="Long Break interval" HBox.hgrow="ALWAYS" maxWidth="Infinity" />
            <Spinner fx:id="intervalSpinner" prefWidth="70" />
        </HBox>
    </VBox>
</StackPane>