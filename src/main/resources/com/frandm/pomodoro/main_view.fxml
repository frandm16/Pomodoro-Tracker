<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.frandm.pomodoro.PomodoroController" style="-fx-background-color: #f8f9fa;">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <HBox spacing="10" alignment="CENTER">
        <VBox alignment="CENTER">
            <Label text="Work" style="-fx-font-size: 10px;"/>
            <TextField fx:id="workTimeField" text="25" prefWidth="40"/>
        </VBox>
        <VBox alignment="CENTER">
            <Label text="Short" style="-fx-font-size: 10px;"/>
            <TextField fx:id="shortTimeField" text="5" prefWidth="40"/>
        </VBox>
        <VBox alignment="CENTER">
            <Label text="Long" style="-fx-font-size: 10px;"/>
            <TextField fx:id="longTimeField" text="15" prefWidth="40"/>
        </VBox>
    </HBox>

    <Separator/>

    <Label fx:id="stateLabel" text="READY TO FOCUS"
           style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>

    <Label fx:id="timerLabel" text="25:00"
           style="-fx-font-size: 65px; -fx-font-family: 'Monospaced'; -fx-text-fill: #2c3e50;"/>

    <Label fx:id="sessionsLabel" text="Sessions: 0" style="-fx-text-fill: #7f8c8d;"/>

    <Separator/>

    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="startButton" text="Start" onAction="#handleStart" prefWidth="80"
                style="-fx-background-color: #27ae60; -fx-text-fill: white;"/>
        <Button fx:id="pauseButton" text="Pause" onAction="#handlePause" prefWidth="80" disable="true"
                style="-fx-background-color: #f39c12; -fx-text-fill: white;"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="finishButton" text="Finish &amp; Save" onAction="#handleFinish" prefWidth="120"
                style="-fx-background-color: #2980b9; -fx-text-fill: white;"/>
        <Button fx:id="resetButton" text="Reset" onAction="#handleReset" prefWidth="80"
                style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
    </HBox>
</VBox>